<body class="fix-header fix-sidebar card-no-border">

  <%= render 'layouts/admin_header' %>
    <div class="page-wrapper">
      <!-- ============================================================== -->
      <!-- Container fluid  -->
      <!-- ============================================================== -->
      <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
          <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Quản Lý Lớp Học</h3>
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="javascript:void(0)">Trang Chủ </a>
              </li>
              <li class="breadcrumb-item active">Quản Lý Lớp Học</li>
            </ol>
          </div>
          <div class="col-md-7 align-self-center text-right d-none d-md-block">
            <%= link_to new_lop_path do %>
              <i class="fa fa-plus-circle"></i> Thêm mới
              <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <h4 class="card-title">
                <h4 class="card-title">Danh sách lớp học</h4>
                <h6 class="card-subtitle">Trường AbCxYz - Khối 123456</h6>
                    <div class="table-responsive m-t-40">
                      <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                          <tr style="text-align: center">
                            <th>Khối học</th>
                            <th>Lớp học</th>
                            <th>Sỹ số</th>
                            <th>Niên khóa</th>
                            <th>Giáo viên phụ trách</th>
                            <th>Thao tác</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @lops.each do |lop| %>
                            <tr style="text-align: center">
                              <td>
                                <%= lop.khoihoc %>
                              </td>
                              <td>
                                <%= link_to lop.lophoc ,lop_students_path(lop) %>
                              </td>
                              <td>
                                <%= lop.syso %>
                              </td>
                              <td>
                                <%= lop.namhoc %>
                              </td>
                              <td>
                                <% lop.phanconggiangdays.each do |phanconggiangday| %>
                                  <%= phanconggiangday.employment.hoten %>
                                    <br />
                                    <% end %>
                              </td>
                              <td>
                                <%= link_to edit_lop_path(lop) do %>
                                  <%= icon("fas", "edit", class: "text-inverse m-r-10") %>
                                    <% end %>

                                                              
                          <%= link_to lop_taisanlops_path(lop) do %>
                            <%= icon("fas", "archive", class: "text-inverse m-r-10") %>
                          <% end %>

                          <%= link_to lop_khoanphiphaithus_path(lop) do %>
                            <%= icon("fas", "file-alt", class: "text-inverse m-r-10") %>
                          <% end %>
                                      <%= link_to lop, method: :delete, data: { confirm: "You sure?" } do %>
                                        <%= icon("fas","window-close", class: "text-danger") %>
                                          <% end %>
                              </td>
                            </tr>
                            <% end %>
                        </tbody>
                      </table>
                    </div>
            </div>
          </div>
        </div>
      </div>
      <%= render 'layouts/admin_footer' %>
</body>