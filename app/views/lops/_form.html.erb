<%= form_with(model: lop, local: true) do |form| %>
  <% if lop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lop.errors.count, "error") %> prohibited this lop from being saved:</h2>

      <ul>
      <% lop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :khoihoc, "Khối học" %>
