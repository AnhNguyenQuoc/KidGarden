    <%= form.label :syso, "Sĩ số" %>
    <%= form.number_field :syso, id: :lop_syso %>
  </div>


   <%= form.hidden_field :department_id, value: Department.find_by(name: "Tổ trưởng / phó các lớp").id %>

  <div class="actions">
    <%= form.submit "Tạo lớp" %>
  </div>
<% end %>
