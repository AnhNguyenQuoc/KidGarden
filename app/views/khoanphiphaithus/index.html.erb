<body class="fix-header fix-sidebar card-no-border">

  <%= render 'layouts/admin_header' %>
    <div class="page-wrapper">
      <!-- ============================================================== -->
      <!-- Container fluid  -->
      <!-- ============================================================== -->
      <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
          <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Quản Lý các khoản phí của lớp
              <%=  @lop.lophoc %>
            </h3>
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="javascript:void(0)">Trang Chủ </a>
              </li>
              <li class="breadcrumb-item active">Quản Lý Chi phí</li>
            </ol>
          </div>
          <div class="col-md-7 align-self-center text-right d-none d-md-block">
            <%= link_to new_lop_khoanphiphaithu_url(@lop), :Class => "btn btn-info" do %>
              <i class="fa fa-plus-circle"></i> Thêm mới
              <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="card">
              <h4 class="card-title">Bảng danh sách phí</h4>
              <%= link_to lops_path do %>
                <%= icon("fas", "chevron-circle-left") %> Quay lại
                  <% end %>
                    <!-- <h6 class="card-subtitle">Trường AbCxYz</h6> -->
                    <div class="table-responsive m-t-40">
                      <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                          <tr style="text-align: center">
                            <th>Tên dịch vụ</th>
                            <th>Phí dịch vụ </th>
                            <th>Loại dịch vụ</th>
                            <th>Kiểu dịch vụ</th>
                            <th>Hình thức</th>
                            <th>Thao tác</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @lop.khoanphiphaithus.each do |khoanphiphaithu| %>
                            <tr style="text-align: center">
                              <td>
                                <%= khoanphiphaithu.tendichvu %>
                              </td>
                              <td>
                                <%= khoanphiphaithu.phidichvu %>
                              </td>
                              <td>
                                <%= khoanphiphaithu.loaidichvu%>
                              </td>
                              <td>
                                <%= khoanphiphaithu.kieudichvu  ? "Bắt buộc" : "Không bắt buộc" %>
                              </td>
                              <td>
                                <%= khoanphiphaithu.hinhthuc %>
                              </td>
                              <td>
                                <%= link_to edit_lop_khoanphiphaithu_url(@lop, khoanphiphaithu) do %>
                                  <%= icon("fas", "edit", class: "text-inverse m-r-10") %>
                                    <% end %>

                                      <%= link_to lop_khoanphiphaithu_path(@lop.id, khoanphiphaithu.id), method: :delete,
                                       data: { confirm: "You sure?" } do %>
                                        <%= icon("fas", "window-close", class: "text-danger") %>
                                          <% end %>
                              </td>
                            </tr>
                            <% end %>
                        </tbody>
                      </table>
                    </div>
            </div>
          </div>
        </div>
        <%= render 'layouts/admin_footer' %>


</body>