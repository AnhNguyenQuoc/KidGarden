<body class="fix-header fix-sidebar card-no-border">

    <%= render 'layouts/admin_header' %>
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <div class="notice"></div>
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">Chỉnh sửa quản lý lớp học</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item active">Chỉnh sửa quản lý lớp học</li>
                        </ol>
                    </div>
                </div>
                <%= form_for [@lop, @lop.khoanphiphaithus.new] do |form| %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card card-outline-inverse">
                                <div class="card-header white">
                                    Thông Tin Cá Nhân
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <%= form.label :tendichvu, "Tên dịch vụ" %>
                                                    <%= form.text_field :tendichvu, :class => "form-control" %>
                                                        <%= error_log(@khoanphiphaithu, :tendichvu) %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :phidichvu, "Phí dịch vụ"%>
                                                    <%= form.text_field :phidichvu, :class => "form-control" %>
                                                        <%= error_log(@khoanphiphaithu, :phidichvu) %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :loaidichvu, "Loại dịch vụ" %>
                                                    <%= form.text_field :loaidichvu, :class => "form-control" %>
                                                        <%= error_log(@khoanphiphaithu, :loaidichvu) %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :kieudichvu, "Bắt buộc" %>
                                                    <%= form.check_box :kieudichvu, :class => "form-control" %>
                                                        <%= error_log(@khoanphiphaithu, :kieudichvu) %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :hinhthuc, "Hình thức" %>
                                                    <%= form.select :hinhthuc, options_for_select(["Hoc Phi", "Tien An", "Khac"]), :prompt => "Chon hinh thuc", :class => "form-control" %>
                                                        <%= error_log(@khoanphiphaithu, :hinhthuc) %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="float: right !important;">
                                <button type="reset" class="btn btn-default">Nhập Lại</button>
                                <%= form.submit button_text + " Phí", :class => 'btn btn-primary' %>
                            </div>
                            <% end %>
                        </div>
                    </div>
                    <%= render 'layouts/admin_footer' %>


</body>