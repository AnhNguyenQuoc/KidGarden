<body class="fix-header fix-sidebar card-no-border">

    <%= render 'layouts/admin_header' %>
        <div class="page-wrapper">
           
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <div class="notice"></div>
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">Chỉnh sửa quản lý lớp học</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">Trang chủ</a>
                            </li>
                            <li class="breadcrumb-item active">Chỉnh sửa quản lý lớp học</li>
                        </ol>
                    </div>
                </div>
                <%= form_for [@lop, @taisanlop] do |form| %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card card-outline-inverse">
                                <div class="card-header white">
                                    Thông Tin Cá Nhân
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <%= form.label :tentaisan, "Tên tài sản" %>
                                                    <%= form.text_field :tentaisan, :class => "form-control" %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :donvitaisan, "Đơn vị tài sản" %>
                                                    <%= form.text_field :donvitaisan, :class => "form-control"  %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :nguontaisan, "Nguồn tài sản" %>
                                                    <%= form.text_field :nguontaisan, :class => "form-control"  %>
                                            </div>

                                            <div class="form-group">
                                                <%= form.label :soluong, "Số lượng" %>
                                                    <%= form.text_field :soluong, :class => "form-control" %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="float: right !important;">
                                <%= form.submit "Thêm tài sản", :class => "btn btn-primary" %>
                            </div>

                            <% end %>
                        </div>
                    </div>
                    <%= render 'layouts/admin_footer' %>



</body>