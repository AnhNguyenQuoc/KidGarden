                  <div class="form-group">
                    <%= form.label :ngaytuyendung, "Ngày tuyển dụng" %>
                      <%= form.date_field :ngaytuyendung, :class => 'form-control' %>
                      <%= error_log(@employment, :ngaytuyendung) %>
                  </div>
                  <div class="form-group">
                    <%= form.label :hethongtuyendung, "Hệ thống tuyển dụng" %>
                      <%= form.text_field :hethongtuyendung, :class => 'form-control' %>
