                  <div class="form-group">
                    <%= form.label :ngayvaonganhgd, "Ngày vào ngành giáo dục" %>
                      <%= form.date_field :ngayvaonganhgd, :class => 'form-control'%>
                      <%= error_log(@employment, :ngayvaonganhgd) %>
                  </div>

                  <div class="form-group">
                    <%= form.label :sobhxh, "Số bảo hiểm xã hội" %>
                      <%= form.text_field :sobhxh, :class => 'form-control' %>
