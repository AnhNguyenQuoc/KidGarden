    <%= form.label :congviecduocgiao, "Công việc được giao" %>
    <%= form.text_field :congviecduocgiao, id: :employment_congviecduocgiao %>
  </div>
  -->

                  <div class="form-group">
                    <%= form.label :ngayvecoquanhiennay,"Ngày về cơ quan hiện nay" %>
                      <%= form.date_field :ngayvecoquanhiennay, :class => 'form-control' %>
                      <%= error_log(@employment, :ngayvecoquanhiennay) %>
