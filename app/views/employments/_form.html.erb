                  </div>

                  <div class="form-group">
                    <%= form.label :department_id, "Phòng ban hiện tại:" %>
                      <%= collection_select(:employment, :department_id, Department.all, :id, :name, { prompt: "Chọn phòng ban" },
                              :class => 'form-control') %>
                      <%= error_log(@employment, :department_id) %>
                  </div>
                </div>
              </div>
            </div>
          </div>


          <div style="float: right !important;">
            <button type="reset" class="btn btn-default">Nhập Lại</button>
