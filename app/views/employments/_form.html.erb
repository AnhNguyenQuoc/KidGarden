                  <div class="form-group">
                    <%= form.label :ngaybatdaudongbhxh, "Ngày bắt đầu đóng bhxh" %>
                      <%= form.date_field :ngaybatdaudongbhxh, :class => 'form-control' %>
                    <%= error_log(@employment, :ngaybatdaudongbhxh) %>
                  </div>

                  <div class="form-check form-check-inline">
                    <%= form.label :dangnghibhxh, "Đang nghỉ bhxh" %>
                      <%= form.check_box :dangnghibhxh, :class => 'form-control' %>
                      <%= error_log(@employment, :dangnghibhxh) %>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <%= form.label :ngayhopdong, "Ngày hợp đồng" %>
                      <%= form.date_field :ngayhopdong, :class => 'form-control' %>
